<div class="page-header">
  <h1>
    Opportunities
    <br>
    <br>
    <a href="/granttables/new" class="btn btn-lg btn-block btn-success">New Opportunity</a>
  </h1>
</div>






<br>
<br>
<br>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Grant ID</th>
        <th>Research Field</th>
        <th>Research Need</th>
        <th>Grant Amount</th>
        <th>Title</th>
        <th>Abstract</th>
        <th>Actions</th>
      </tr>

      <% @granttables.each do |granttable| %>
      <tr>
        <td><%= granttable.grant_id %></td>
        <td><%= granttable.field %></td>

        <% if granttable.research_need == 1 %>
        <td> Looking for funding($) </td>
        <% end %>
        <% if granttable.research_need == 2 %>
        <td> I have funding ($) but I am looking for collaboration </td>
        <% end %>
        <% if granttable.research_need == 3 %>
        <td>I am looking for collaboration</td>
        <% end %>

        <td><%= granttable.grant_amt %></td>
        <td><%= granttable.title %></td>
        <td><%= granttable.abstract %></td>
        <td>
          <a href="/granttables/<%= granttable.id %>" class="btn btn-block btn-primary">Show More Details</a>
          <a href="/granttables/<%= granttable.id %>/edit" class="btn btn-block btn-warning">Edit</a>
          <a href="/delete_granttable/<%= granttable.id %>" class="btn btn-block btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
